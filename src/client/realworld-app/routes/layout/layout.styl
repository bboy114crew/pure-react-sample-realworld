.vcb-layout {
  & > .main > .header {
    & > .default-content {
      text-align center;
      padding-top: 8px;

      img {
        height 35px;
      }
    }
    & > .text {
      padding-top: 15px;
      text-align center;
      font-weight: bold;
      text-transform: uppercase;
      font-size: 15px;
      color: #144633;
      line-height: 20px;
    }
  }

  & > .nav-container > .nav .hier-nav {
    padding-top 54px;
    position relative;
    overflow hidden;
    height 100%;

    .header {
      height: 54px;
      line-height: 54px;
      padding: 0 30px;
      margin: 0;
      position: absolute;
      top: 0;
      left: 0;
      width 100%;
      background: #FFF;
      box-shadow: 0 0 10px 2px #D3D4D6;

      color: #144633;
      font-size: 15px;
      font-family: Arial,Tahoma;
      font-weight: bold;
      text-overflow: ellipsis;
      white-space: nowrap;
      overflow: hidden;
      text-transform: uppercase;


      .fa-angle-left {
        position: absolute;
        top: 14px;
        left: 10px;
        font-size: 21px;
      }

    }

    .body .list-item {
      height 45px;
      position relative;
      padding-left 9px;

      &.has-icon {
        padding-left 40px;
      }

      img {
        position: absolute;
        top: 8px;
        left: 7px;
      }

      .content {
        height 100%;
        line-height 44px;
        border-bottom: 1px dotted #666;
      }

      .fa-angle-right {
        position: absolute;
        top: 12px;
        right: 10px;
        font-size: 19px;
      }

      &.disabled {
        .content {
          color #b1b1b1;
        }
      }
    }
  }
}